<Window x:Class="Leo.Wpf.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Leo.Wpf.App.Views"
        mc:Ignorable="d"
        Icon="../leon.ico"
        Title="客户管理系统" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="MinWidth" Value="80"></Setter>
            <Setter Property="Background" Value="Gainsboro"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Right"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="MinWidth" Value="100" />
            <Setter Property="Margin" Value="2,0,5,0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="IsEnabled" Value="False" />
        </Style>
        <Style TargetType="WrapPanel">
            <Setter Property="Margin" Value="0,2,0,2" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button Content="新增" />
                <Button Content="修改" />
                <Button Content="查找" />
                <Button Content="回音" />
            </ToolBar>
        </ToolBarTray>
        <StackPanel Grid.Row="1">
            <WrapPanel>
                <Label Content="宝宝姓名：" Target="{Binding ElementName=txtName}" />
                <TextBox x:Name="txtName" Text="张三" />

                <Label Content="手机：" Target="{Binding ElementName=txtPhone}" />
                <TextBox x:Name="txtPhone" Text="12345678901" />

                <Label Content="性别：" Target="{Binding ElementName=txtGender}" />
                <TextBox x:Name="txtGender" Text="女" />
            </WrapPanel>
            <WrapPanel>
                <Label Content="出生日期：" Target="{Binding ElementName=txtBirthday}" />
                <TextBox x:Name="txtBirthday" Text="2003年09月33日" />

                <Label Content="年龄：" Target="{Binding ElementName=txtAge}" />
                <TextBox x:Name="txtAge" Text="13" />

                <Label Content="会员卡号：" Target="{Binding ElementName=txtCardNo}" />
                <TextBox x:Name="txtCardNo" Text="12345678901" />
            </WrapPanel>
        </StackPanel>
        <DataGrid Grid.Row="2">

        </DataGrid>

    </Grid>
</Window>
